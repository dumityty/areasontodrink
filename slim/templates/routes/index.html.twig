{% extends 'base.html.twig' %}

{% block content %}
  <div class="container-fluid">
    <div class="col-sm-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
      <div class="row">
      	<div class="flash">
      		<p class="text-info">{{ flash.info }}</p>
      		<p class="text-danger">{{flash.error}}</p>
      	</div>
      	<br>
      	{% if reason %}
	        <div class="reason" data-id="{{reason.id}}">
	        	{{reason.reason}}
	        </div>
	        <div class="report">
	        	<a href="/report/{{reason.id}}" class="text-danger">Report</a>
	        </div>
	       {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
